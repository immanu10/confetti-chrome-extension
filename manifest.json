{
  "name": "Effects on screen",
  "description": "Learning to make extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["confetti.browser.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/celebration16.png",
      "32": "/images/celebration32.png",
      "48": "/images/celebration48.png",
      "128": "/images/celebration128.png"
    }
  },
  "icons": {
    "16": "/images/celebration16.png",
    "32": "/images/celebration32.png",
    "48": "/images/celebration48.png",
    "128": "/images/celebration128.png"
  }
}
